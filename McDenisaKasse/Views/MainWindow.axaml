<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="McDenisaKasse.Views.MainWindow"
        Title="Startseite" 
        Width="1200" 
        Height="800"
        Background="SeaShell">
  
    <Window.Styles>
        <Style Selector="ListBox">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="ListBoxItem TextBlock">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover TextBlock">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style Selector="ListBoxItem:selected TextBlock">
            <Setter Property="Foreground" Value="SeaShell"/> 
        </Style>
    </Window.Styles>

    <StackPanel HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Spacing="50">
        
        
        <TextBlock Text="Willkommen bei McDenisa" 
                   FontSize="40" 
                   FontWeight="Bold"
                   Foreground="Maroon"
                   HorizontalAlignment="Center"/>
        <Image Source="avares://McDenisaKasse/Assets/Adobe Express - file.png" 
               Width="500" 
               Height="150" 
               Margin="0,0,0,0"/>

        <Button x:Name="BtnBestellen" 
                Content="BESTELLEN" 
                Foreground="Maroon"
                Width="500" 
                Height="200" 
                FontSize="50" 
                FontWeight="ExtraBold"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center"
                BorderThickness="5"
                BorderBrush="SaddleBrown"
                CornerRadius="40"
                Background="AntiqueWhite"
                Click="OnBestellenClick"/> 
        
        <Button Content="Abbrechen" 
                Width="100" 
                Foreground="Black"
                HorizontalAlignment="Center"
                Click="OnAbbrechenClick"/>
    </StackPanel>
</Window>