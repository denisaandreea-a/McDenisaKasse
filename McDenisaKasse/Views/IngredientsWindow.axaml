<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="McDenisaKasse.Views.IngredientsWindow"
        Title="Zutaten anpassen" Width="400" Height="500"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="BorderOnly"
        Background="AntiqueWhite">
    
    <Border BorderBrush="Black" BorderThickness="2" Padding="20">
        
        <Grid RowDefinitions="Auto, *, Auto">
            
            <TextBlock Grid.Row="0" x:Name="TitleText" Text="Zutaten wÃ¤hlen" 
                       FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1">
                <StackPanel x:Name="CheckboxContainer" Spacing="10"/>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,20,0,0">
                
                <Button Content="Speichern" Background="Green" Foreground="White" Width="120" Click="OnSaveClick"/>
                
                <Button Content="Abbrechen" Background="Red" Foreground="White" Width="120" Click="OnCancelClick"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>