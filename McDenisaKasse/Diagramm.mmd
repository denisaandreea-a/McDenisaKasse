    %% Hauptfenster (Die Zentrale)
    class MenuWindow {
        +ObservableCollection~string~ BestellListe
        -int _aktuelleMenge
        +MenuWindow()
        -decimal GetEinzelPreis(string name)
        -void UpdateTotal()
        -void FuegeHinzu(string name)
        -void OnProduktClick()
        -void OnZutatenClick()
        -void OnNummerClick()
        -void OnAbschliessenClick()
        -void OnPreiseClick()
        -Task~string~ FrageStellen()
    }

    %% Checkout (Bezahlen)
    class CheckoutWindow {
        +CheckoutWindow()
        -void OnBarClick()
        -void OnKarteClick()
        -void OnCancelClick()
    }

    %% Zutaten (Küche)
    class IngredientsWindow {
        +string ResultString
        -List~CheckBox~ _checkBoxes
        +IngredientsWindow(string produktName, List~string~ zutaten)
        -void OnSaveClick()
        -void OnCancelClick()
    }

    %% Preisliste (Info)
    class PriceWindow {
        +PriceWindow()
        -void OnCloseClick()
    }

    %% Popup Helper (Fragen)
    class OptionWindow {
        +string SelectedOption
        +OptionWindow(string titel, List~string~ optionen)
    }

    class MenuConfigWindow {
        +string ResultString
        +MenuConfigWindow(string burgerName)
    }

    %% Beziehungen (Wer ruft wen auf?)
    MenuWindow ..> CheckoutWindow : öffnet
    MenuWindow ..> IngredientsWindow : öffnet & liest Daten
    MenuWindow ..> PriceWindow : zeigt an
    MenuWindow ..> OptionWindow : fragt Nutzer
    MenuWindow ..> MenuConfigWindow : konfiguriert Menü